<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Dn500BD.Retrograde.UI.Controls.PhraseSelectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dn500BD.Retrograde.UI.Controls">

    <ContentControl Style="{StaticResource RetroViewBox}" Width="100">
        <TextBlock
            Width="100"
            FontFamily="{StaticResource RetroFontBold}"
            FontSize="{StaticResource FontSizeLarge}"
            Text="00:00"
            Style="{StaticResource DarkText}"
            CharacterSpacing="{StaticResource KerningWide}"
            TextAlignment="Center"
            VerticalAlignment="Center"
            HorizontalAlignment="Center" />
    </ContentControl>
</UserControl>
