<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Dn500BD.Retrograde.UI.Controls.RandomControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dn500BD.Retrograde.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="4" HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- Button Group -->
            <StackPanel Spacing="2" HorizontalAlignment="Center">
                <Button Style="{StaticResource RetroSquareButton}" Width="50" Height="50" />
                <TextBlock Text="RANDOM"
                       Style="{StaticResource LightText}"
                       FontSize="{StaticResource FontSizeMedium}"
                       TextAlignment="Center"
                       HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Percentage ViewBox -->
            <ContentControl Style="{StaticResource RetroViewBox}"
                        Width="50"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                <TextBlock Text="100%"
                       Style="{StaticResource DarkTextBold}"
                       FontSize="{StaticResource FontSizeMedium}" />
            </ContentControl>
        </StackPanel>
    </Grid>
</UserControl>
