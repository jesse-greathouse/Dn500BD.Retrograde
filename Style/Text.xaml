<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font Family -->
    <FontFamily x:Key="RetroFont">ms-appx:///Assets/Fonts/Kalam-Regular.ttf#Kalam</FontFamily>
    <FontFamily x:Key="RetroFontBold">ms-appx:///Assets/Fonts/Kalam-Bold.ttf#Kalam</FontFamily>
    <FontFamily x:Key="RetroFontLight">ms-appx:///Assets/Fonts/Kalam-Light.ttf#Kalam</FontFamily>

    <!-- Standardized Text Colors -->
    <SolidColorBrush x:Key="TextDarkBrush" Color="#474747" />
    <SolidColorBrush x:Key="TextLightBrush" Color="#F8F8F8" />

    <!-- Global TextBlock Style (Default to light, center-aligned) -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RetroFont}" />
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Character spacing -->
    <x:Int32 x:Key="KerningWide">240</x:Int32>

    <!-- Standardized Font Sizes -->
    <x:Double x:Key="FontSizeMedium">14</x:Double>
    <x:Double x:Key="FontSizeLarge">18</x:Double>
    <x:Double x:Key="FontSizeXLarge">48</x:Double>

    <!-- Optional named styles for explicit usage -->
    <Style x:Key="DarkText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RetroFont}" />
        <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}" />
    </Style>

    <Style x:Key="LightText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RetroFont}" />
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}" />
    </Style>

    <Style x:Key="DarkTextBold" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RetroFontBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>

