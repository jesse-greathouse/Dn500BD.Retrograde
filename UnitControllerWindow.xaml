<Window
    x:Class="Dn500BD.Retrograde.UnitControllerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dn500BD"
    Title="BD Unit Controller">

    <StackPanel Orientation="Vertical" Spacing="12">
        <TextBlock x:Name="HeaderText" FontSize="20" FontWeight="Bold" />
        <ProgressRing IsActive="True" Width="48" Height="48" Margin="0,20"/>
        <TextBlock Text="Initializing control surface..." HorizontalAlignment="Center"/>
    </StackPanel>
</Window>

